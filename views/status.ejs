<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <title>Order status</title>
</head>
<body>
    

    <h1 style="text-decoration: underline; font-weight: bolder; padding: 20px 10px;">Order status</h1>

    <h3 style="color: green; padding: 0 10px;">see changes</h3>


    <script>
        const socket = io()

        socket.on('hello_mess', (data) => {
            console.log(data)
        })

        socket.on('status_change', (status) => {
            const h3 = document.querySelector('h3')
            h3.innerHTML = status
        })



    </script>
</body>
</html>